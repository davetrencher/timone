<idea-plugin version="1" url="https://github.com/davetrencher/timone">
	
	<name>timone</name>
	
	<id>timone</id>

	<description>
		TiMONe allows you to launch multiple TCP Monitors so that you can see HTTP request/responses between a client
        and server.  It's useful for diagnosing and testing XML and JSON requests.
	</description>
	
	<version>2.0</version>
	
	<vendor url="https://github.com/davetrencher">Dave Trencher</vendor>

	<idea-version since-build="145.258"/>
	
	<change-notes>repackaged for Idea 16.x</change-notes>
	
	<category>network</category>
	
	<project-components>
		<component>
			<implementation-class>com.github.davetrencher.timone.TunnelPlugin</implementation-class>
			<interface-class>com.github.davetrencher.timone.TunnelPlugin</interface-class>
		</component>
	</project-components>

	<extensions defaultExtensionNs="com.intellij">
		<!-- Add your extensions here -->
		<applicationService
				serviceImplementation="com.github.davetrencher.timone.settings.ConfigProvider"
				serviceInterface="com.github.davetrencher.timone.settings.ConfigProvider"
				overrides="false"
		/>
	</extensions>

	<application-components>
		<component>
			<implementation-class>com.github.davetrencher.timone.settings.ConfigProvider</implementation-class>
			<interface-class>com.github.davetrencher.timone.settings.ConfigProvider</interface-class>
		</component>
	</application-components>

	<actions>
		<action id="About" class="com.github.davetrencher.timone.action.AboutAction" text="About" description="Action To show About dialog"/>
		<action id="Clear" class="com.github.davetrencher.timone.action.ClearAction" text="Clear" description="Action To clear all call information"/>
		<action id="ClearSelected" class="com.github.davetrencher.timone.action.ClearSelectedAction" text="ClearSelected" description="Action To clear selected call information"/>
		<action id="Settings" class="com.github.davetrencher.timone.action.SettingsAction" text="Settings" description="Action To Set Up The Tunnels"/>
		<action id="Wrap" class="com.github.davetrencher.timone.action.WrapAction" text="Wrap" description="Action To Wrap The Tunnel Text"/>
	</actions>
</idea-plugin>
